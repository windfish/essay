<?xml version="1.0" encoding="UTF-8"?>
<beans>
    <bean id="car" class="com.demon.spring.custom.simpleioc.Car">
        <property name="name" value="Mercedes Benz G 500" />
        <property name="length" value="4717mm" />
        <property name="width" value="1855mm" />
        <property name="height" value="1949mm" />
        <property name="wheel" ref="wheel" />
    </bean>
    <bean id="wheel" class="com.demon.spring.custom.simpleioc.Wheel">
        <property name="brand" value="Michelin" />
        <property name="specification" value="205/55 R16" />
    </bean>
    
    <bean id="aspectJAwareAdvisorAutoProxyCreator" class="com.demon.spring.custom.aop.aspect.AspectJAwareAdvisorAutoProxyCreator"/>
    <bean id="helloService" class="com.demon.spring.custom.simpleaop.HelloServiceImpl" />
    <bean id="logAdvisor" class="com.demon.spring.custom.aop.aspect.LogAdvisor"/>
    <bean id="helloServiceNoInterface" class="com.demon.spring.custom.simpleaop.HelloServiceNoInterface"/>
</beans>